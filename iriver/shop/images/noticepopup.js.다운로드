//$(function() { $("#lpNotice").draggable(); });

function noticeLayerClose(idx) {
    document.getElementById("lpNoticePopup" + idx).style.visibility = "hidden";
}

function noticeCloseByday(idx, cday) {
    if (document.getElementById("chkboxNotice" + idx).checked) {
        setCookie("Trans_NoticePopup" + idx, "done", cday);
    }

    document.getElementById("lpNoticePopup" + idx).style.visibility = "hidden";
    document.getElementById("chkboxNotice" + idx).checked = false;
}

function noticeCloseBydayWin(idx, cday) {
    if (document.getElementById("chkboxNotice" + idx).checked) {
        setCookie("Trans_NoticePopup" + idx, "done", cday);
    }

    window.self.close();
    document.getElementById("chkboxNotice" + idx).checked = false;
}

