// 포토겔러리용 시작
var photo_bbox = 172; //큰이미지 오른쪽 여백포함 크기

var photo_bbox_hit_1 = 0; //bbox현제표시 저장
var photo_bbox_hit_2 = 0; //bbox현제표시 저장
var photo_bbox_hit_3 = 0; //bbox현제표시 저장

var photo_sbox_all_1;
var photo_sbox_all_2;
var photo_sbox_all_3;

var photo_sbox_allWidth_1;
var photo_sbox_allWidth_2;
var photo_sbox_allWidth_3;

var photo_sbox_moveWidth_1;
var photo_sbox_moveWidth_2;
var photo_sbox_moveWidth_3;

var photo_bbox_all_1;
var photo_bbox_all_2;
var photo_bbox_all_3;

var photo_bbox_allWidth_1;
var photo_bbox_allWidth_2;
var photo_bbox_allWidth_3;

var photo_bbox_moveWidth_1;
var photo_bbox_moveWidth_2;
var photo_bbox_moveWidth_3;

function photo_init_1(){
	//큰
    photo_bbox_all_1 = jQuery(".photo_bimg_1 > ul >li").size();
    photo_bbox_allWidth_1 = photo_bbox_all_1 * photo_bbox;
    photo_bbox_moveWidth_1 = jQuery(".photo_bimg_1").width();

	//큰
    jQuery(".photo_bleft_1").click(function() { photo_bbox_start_1('right'); return false; });
    jQuery(".photo_bright_1").click(function() { photo_bbox_start_1('left'); return false; });
	
	//큰이미지
    jQuery(".photo_bimg_1").css({ "overflow": "hidden" });
}

function photo_init_2() {
    //큰
    photo_bbox_all_2 = jQuery(".photo_bimg_2 > ul >li").size();
    photo_bbox_allWidth_2 = photo_bbox_all_2 * photo_bbox;
    photo_bbox_moveWidth_2 = jQuery(".photo_bimg_2").width();

    //큰
    jQuery(".photo_bleft_2").click(function() { photo_bbox_start_2('right'); return false; });
    jQuery(".photo_bright_2").click(function() { photo_bbox_start_2('left'); return false; });

    //큰이미지
    jQuery(".photo_bimg_2").css({ "overflow": "hidden" });
 }
 function photo_init_3() {   
    //큰
    photo_bbox_all_3 = jQuery(".photo_bimg_3 > ul >li").size();
    photo_bbox_allWidth_3 = photo_bbox_all_3 * photo_bbox;
    photo_bbox_moveWidth_3 = jQuery(".photo_bimg_3").width();

    //큰
    jQuery(".photo_bleft_3").click(function() { photo_bbox_start_3('right'); return false; });
    jQuery(".photo_bright_3").click(function() { photo_bbox_start_3('left'); return false; });

    //큰이미지
    jQuery(".photo_bimg_3").css({ "overflow": "hidden" });
}

//sbox border
function photo_sbox_border_1(cnt){
    var bbox_left = (photo_bbox * cnt) * -1;
    photo_bbox_hit_1 = cnt;  
	photo_bbox_move_1(bbox_left);
}

//bbox left, right
function photo_bbox_start_1(set){

    var left_check = jQuery(".photo_bimg_1 > ul").position().left;

    if (set == "left") {
	    if (left_check >= -(photo_bbox_allWidth_1 - photo_bbox_moveWidth_1 - photo_bbox)) {
			photo_bbox_hit_1++;
			photo_sbox_border_1(photo_bbox_hit_1);			
		}		
	} else {			
		if(left_check < 0){
			photo_bbox_hit_1--;
			photo_sbox_border_1(photo_bbox_hit_1);
		}		
	}

}
//bbox 이동
function photo_bbox_move_1(move){
    jQuery(".photo_bimg_1 > ul").animate(
		{left:move}
		,300
	);
}

//sbox border
function photo_sbox_border_2(cnt) {
    var bbox_left = (photo_bbox * cnt) * -1;
    photo_bbox_hit_2 = cnt;

    photo_bbox_move_2(bbox_left);
}

//bbox left, right
function photo_bbox_start_2(set) {

    var left_check = jQuery(".photo_bimg_2 > ul").position().left;

    if (set == "left") {
        if (left_check >= -(photo_bbox_allWidth_2 - photo_bbox_moveWidth_2 - photo_bbox)) {
            photo_bbox_hit_2++;
            photo_sbox_border_2(photo_bbox_hit_2);
        }
    } else {
        if (left_check < 0) {
            photo_bbox_hit_2--;
            photo_sbox_border_2(photo_bbox_hit_2);
        }
    }

}
//bbox 이동
function photo_bbox_move_2(move) {
    jQuery(".photo_bimg_2 > ul").animate(
		{ left: move }
		, 300
	);
}

//sbox border
function photo_sbox_border_3(cnt) {
    var bbox_left = (photo_bbox * cnt) * -1;
    photo_bbox_hit_3 = cnt;

    photo_bbox_move_3(bbox_left);
}

//bbox left, right
function photo_bbox_start_3(set) {

    var left_check = jQuery(".photo_bimg_3 > ul").position().left;

    if (set == "left") {
        if (left_check >= -(photo_bbox_allWidth_3 - photo_bbox_moveWidth_3 - photo_bbox)) {
            photo_bbox_hit_3++;
            photo_sbox_border_3(photo_bbox_hit_3);
        }
    } else {
        if (left_check < 0) {
            photo_bbox_hit_3--;
            photo_sbox_border_3(photo_bbox_hit_3);
        }
    }

}
//bbox 이동
function photo_bbox_move_3(move) {
    jQuery(".photo_bimg_3 > ul").animate(
		{ left: move }
		, 300
	);
}